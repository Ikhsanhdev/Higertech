@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product";
}

<!-- Product Section -->
@section styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/carousel/carousel.css"/>
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            padding: 15px;
            border-bottom: none;
        }

        .card-img-top {
            width: 100%;
            height: auto;
            aspect-ratio: 8/9; /* Rasio 16:9 agar seragam */
            object-fit: cover; /* Memastikan gambar tidak terdistorsi */
            padding: 10px;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1rem;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
        }

        .category-filter {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
            width: auto;
        }

        .category-filter select {
            width: 200px; /* Atur lebar select agar tidak terlalu besar */
        }

        .product-detail-image {
            max-width: 100%;
            height: auto;
            object-fit: contain;
        }

        .modal-product-specs {
            list-style-type: none;
            padding: 0;
        }

        .modal-product-specs li {
            margin-bottom: 10px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

        .product-gallery {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .gallery-thumb {
            width: 80px;
            height: 80px;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid transparent;
            border-radius: 4px;
        }

        .gallery-thumb:hover {
            border-color: #007bff;
        }
    </style>
}

<br>
<br>
<br>

<section id="Product" class="Product section">
    <div class="container section-title text-center" data-aos="fade-up">
        <h2>Product</h2>
        <p>Our various superior products</p>
    </div>

    <div class="container category-filter d-flex align-items-center">
        <label for="categoryFilter" class="me-2 fw-bold">Category :</label>
        <select id="categoryFilter" class="form-select">
            <option value="semua">All Product</option>
            <option value="hidrologi">Hidrologi</option>
            <option value="klimatologi">Klimatologi</option>
        </select>
    </div>

    <div class="container">
        <div class="row gy-4">
            @{ var ProductList = new[] {
                new { Image = "/assets/img/Product/curahhujan.png", Title = "CURAH HUJAN TELEMETRI" },
                new { Image = "/assets/img/Product/loggerlo1.png", Title = "DATA LOGGER TELEMETRI HGT_L01" },
                new { Image = "/assets/img/Product/piscal.png", Title = "PEILSCHAAL" },
                new { Image = "/assets/img/Product/AwlrSonar.png", Title = "AWLR SONAR" },
                new { Image = "/assets/img/Product/Reedswitch.png", Title = "REED SWITCH" },
                new { Image = "/assets/img/Product/AVW200.png", Title = "AVW 200" },
                new { Image = "/assets/img/Product/AdaptorModem.png", Title = "ADAPTOR MODEM" },
                new { Image = "/assets/img/Product/SedimenDasar.png", Title = "ALAT PENGAMBIL SEDIMEN DASAR" },
                new { Image = "/assets/img/Product/AnemometerGermany.png", Title = "ANEMOMETER GERMANY" }
            };
            }

            @foreach (var Product in ProductList)
            {
                <div class="col-md-4" data-aos="fade-up">
                    <div class="card border-0 shadow">
                        <a href="@Product.Image" data-fancybox="gallery" data-caption="@Product.Title">
                            <img src="@Product.Image" alt="@Product.Title" class="card-img-top">
                        </a>
                        <div class="card-body text-center">
                            <h5 class="card-title">@Product.Title</h5>
                            <button class="btn btn-primary w-100">Detail</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Detail Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div id="productGallery"></div>
                        </div>
                        <div class="col-md-6">
                            <h4 id="modalProductTitle">Name Product</h4>
                            <ul class="modal-product-specs" id="modalProductSpecs"></ul>
                            <div class="mt-3">
                                <h5>Description</h5>
                                <p id="modalProductDescription">The Product Description will appear here.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> <!-- End Product Section -->

