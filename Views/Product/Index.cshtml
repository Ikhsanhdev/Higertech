        };

        // Update event listener untuk tombol detail
        document.querySelectorAll('.btn-primary').forEach(button => {
            button.addEventListener('click', function() {
                const productTitle = this.closest('.card-body').querySelector('.card-title').textContent;
                const product = productData[productTitle];
                
                if (product) {
                    // Update modal content
                    document.getElementById('modalProductTitle').textContent = productTitle;
                    document.getElementById('modalProductDescription').textContent = product.description;
                    
                    // Update specifications
                    const specsList = document.getElementById('modalProductSpecs');
                    specsList.innerHTML = product.specs.map(spec => `<li>${spec}</li>`).join('');

                    // Update main image
                    let mainImageHTML = `
                        <a href="${product.images[0]}" data-fancybox="gallery-${productTitle.toLowerCase().replace(/\s+/g, '-')}" class="d-block mb-3">
                            <img id="mainProductImage" src="${product.images[0]}" class="img-fluid product-detail-image" alt="${productTitle}">
                        </a>
                    `;

                    // Update thumbnails
                    let thumbnailsHTML = product.images.map((img, index) => {
                        if (index === 0) return ''; // Skip first image
                        return `<img src="${img}" class="gallery-thumb" data-image="${img}" alt="${productTitle} ${index + 1}">`;
                    }).join('');

                    // Update gallery container
                    const galleryContainer = document.getElementById('productGallery');
                    galleryContainer.innerHTML = mainImageHTML + `<div class="product-gallery">${thumbnailsHTML}</div>`;

                    // Add event listener to thumbnails
                    document.querySelectorAll('.gallery-thumb').forEach(thumb => {
                        thumb.addEventListener('click', function() {
                            document.getElementById('mainProductImage').src = this.getAttribute('data-image');
                        });
                    });

                    // Show modal
                    var productModal = new bootstrap.Modal(document.getElementById('productModal'));
                    productModal.show();
                }
            });
        });

        // Menangani perubahan kategori filter
        document.getElementById('categoryFilter').addEventListener('change', function () {
            var selectedCategory = this.value;
            var products = document.querySelectorAll('.col-md-4');

            products.forEach(function (product) {
                const productTitle = product.querySelector('.card-title').textContent;
                const productInfo = productData[productTitle];

                if (selectedCategory === 'semua' || (productInfo && productInfo.category === selectedCategory)) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        });
