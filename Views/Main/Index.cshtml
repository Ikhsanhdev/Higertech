@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

@model List<Higertech.Models.Main>

@section Styles {
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <style>
        .hero .dynamic-text {
            transition: opacity 0.5s ease-in-out;
        }

        .carousel-item {
            transition: transform 0.5s ease-in-out;
        }
        .dark-background {
            background-color: rgba(0,0,0,0.6);
        }
        
        .portfolio-item {
            position: relative;
            overflow: hidden;
        }

        /* Menjaga rasio dan ukuran gambar seragam */
        .portfolio-content img {
            width: 100%;
            height: 250px; /* Atur tinggi gambar yang diinginkan */
            object-fit: cover; /* Memastikan gambar tetap proporsional */
        }

        /* Portfolio Info Overlay */
        .portfolio-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px;
            background: rgba(0, 0, 0, 0.6); /* Semi-transparent black overlay */
            color: #fff;
            text-align: center;
            transition: all 0.3s ease;
        }

        /* Hover effect for zoom */
        .portfolio-item:hover img {
            transform: scale(1.1); /* Zoom saat hover */
            transition: transform 0.5s ease-in-out;
        }

        /* Optional: Hover effect to show details */
        .portfolio-item:hover .portfolio-info {
            bottom: 10px; /* Sedikit naik ke atas saat hover */
        }
    </style>
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">
    <div class="info d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-6 text-center">
                    <h2 id="dynamicTitle" class="dynamic-text">Telemetry Specialist - Solusi Peralatan Telemetry</h2>
                    <p id="dynamicDescription" class="dynamic-text">Higertech menyediakan berbagai macam produk teknologi yang melakukan pengukuran jarak jauh dan data yang akurat untuk Duga Air, Curah Hujan, Klimatologi dan Kualitas Air sebagai solusi untuk kebutuhan anda.</p>
                    <a href="#constructions" class="btn-get-started">Get Started</a>
                </div>
            </div>
        </div>
    </div>

    <div id="hero-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-item" data-description="Pengukuran duga air yang sangat akurat dan terpercaya, menggunakan teknologi terbaru untuk memantau ketinggian air secara real-time." data-title="Teknologi Pengukuran Duga Air Terpercaya dan Akurat">
            <img src="assets/img/hero-carousel/pasang1.jpg" alt="">
        </div>

        <div class="carousel-item active" data-description="Sistem monitoring curah hujan berteknologi tinggi yang mampu memberikan data yang akurat dan real-time untuk kebutuhan analisis cuaca." data-title="Sistem Monitoring Curah Hujan Canggih dengan Akurasi Tinggi">
