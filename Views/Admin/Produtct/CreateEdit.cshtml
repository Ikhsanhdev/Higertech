@{
  Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
  ViewData["Title"] = "Dashboard - Product";
}
@section VendorStyles {
  <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}
@section VendorScripts {
  <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}
@section PageScripts {
  <script src="~/js/dashboards-product.js"></script>
}

@model Higertech.Models.ProductViewModel

@* ************** Content ************** *@

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@(Model?id == Guid.Empty ? "Tambah Produk Baru" : "Edit Produk")</h5>
            </div>
            <div class="card-body">
                <form asp-action="Save" asp-controller="Product" method="post">
                    <input type="hidden" asp-for="id" />
                    
                    <div class="mb-3">
                        <label asp-for="nama_produk" class="form-label">Nama Produk</label>
                        <input asp-for="nama_produk" class="form-control" placeholder="Masukkan nama produk" />
                        <span asp-validation-for="nama_produk" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="gambar_url" class="form-label">URL Gambar</label>
                        <input asp-for="gambar_url" class="form-control" placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="gambar_url" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="kategori" class="form-label">Kategori</label>
                        <input asp-for="kategori" class="form-control" placeholder="Masukkan kategori" />
                        <span asp-validation-for="kategori" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary me-2">Simpan</button>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">Batal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}