@{
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
    ViewData["Title"] = "Dashboard - Product";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}
@section PageScripts {
    <script src="~/js/dashboards-product.js"></script>
}

@model List<Higertech.Models.ProductViewModel>


@* ************** Content ************** *@
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Daftar Produk</h5>
                <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i> Tambah Produk
                </a>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nama Produk</th>
                            <th>Gambar</th>
                            <th>Kategori</th>
                            <th>Tanggal Dibuat</th>
                            <th>Terakhir Update</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.nama_produk</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.gambar_url))
                                    {
                                        <img src="@item.gambar_url" alt="@item.nama_produk" style="height: 50px; width: 50px; object-fit: cover;" />
                                    }
                                </td>
                                <td>@item.kategori</td>
                                <td>@item.created_at?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.updated_at?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("Edit", "Product", new { id = item.id })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="deleteProduct('@item.id')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this product?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Product")',
                    type: 'POST',
                    data: { id: id }, // Kirim ID sebagai data, bukan di URL
                    success: function (result) {
                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert('Failed to delete product');
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the product');
                    }
                });
            }
        }
    </script>
}